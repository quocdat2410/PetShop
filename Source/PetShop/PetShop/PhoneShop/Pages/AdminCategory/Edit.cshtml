@page
@model PetShop.Models.AdminCategory.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h4>Chỉnh sửa danh mục</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.CateName" class="control-label">Tên danh mục</label>
                <input asp-for="Category.CateName" class="form-control" />
                <span asp-validation-for="Category.CateName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Category.CateId" />
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Quay trở về</a>
</div>

