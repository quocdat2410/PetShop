@page
@model PetShop.Models.AdminCategory.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h3>Bạn chắc chắn muốn xóa danh mục này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Category.CateName) *@ ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CateId)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Category.CateName) *@ Tên danh mục:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CateName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Category.CateId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-page="./Index">Quay trở về</a>
    </form>
</div>
