@page
@model PetShop.Models.AdminInvoice.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Chi tiết hóa đơn</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tổng tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.InvoiceDate)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.Status)
        </dd>
        <dt class="col-sm-2">
            Hóa đơn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.Cart.CartId)
        </dd>
        <dt class="col-sm-2">
            Khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.User.UserId)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@Model.Invoice.InvoiceId">Chỉnh sửa</a> 
    <a class="btn btn-primary" asp-page="./Index">Quay trở về</a>
</div>
