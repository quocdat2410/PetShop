@page
@model PetShop.Models.AdminInvoice.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<h3>Bạn muốn xóa hóa đơn này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tổng tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.InvoiceDate)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.Status)
        </dd>
        <dt class="col-sm-2">
            ID Hóa đơn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.Cart.CartId)
        </dd>
        <dt class="col-sm-2">
            Khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.User.UserId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Invoice.InvoiceId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-page="./Index">Quay trở về</a>
    </form>
</div>
