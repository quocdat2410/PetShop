@page
@model PetShop.Models.AdminProduct.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Danh sách sản phẩm</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Thêm sản phẩm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Product[0].ProductName) *@ Tên sản phẩm
            </th>
            <th>
                Giá
            </th>
            <th>
                Màu sắc
            </th>
            <th>
                Thương hiệu
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Thuộc danh mục
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img style="width:100px" src="../img/@Html.DisplayFor(modelItem => item.ProductImage)" />             
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cate.CateId)
            </td>
            <td>
                <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.ProductId">Chỉnh sửa</a> 
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.ProductId">Xem</a> 
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ProductId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
